<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SalesDAO">

	<select id="analysisSalesYear" parameterType="sales" resultType="java.util.List">
		SELECT
		SUM(t.ticket_price) as count,
		to_char(payment_date,'YYYY') as payment_date
		FROM sales, ticket t
		WHERE <![CDATA[
		payment_date >= #{startDate}
		AND payment_date < #{endDate}
		]]>
		GROUP BY to_char(payment_date, 'YYYY');
	</select>
	
	<select id="analysisSalesMonth" parameterType="sales" resultMap="salesList">
		SELECT
		SUM(t.ticket_price) as count,
		to_char(payment_date,'YYYY-MM') as payment_date
		FROM sales
		WHERE <![CDATA[
		payment_date >= #{startDate}
		AND payment_date < #{endDate}
		]]>
		GROUP BY to_char(payment_date, 'YYYY-MM');
	</select>

	<resultMap type="sales" id="salesList">
		<id property="salesId" column="sales_id" />
		<result property="rnum" column="rnum" />
		<result property="cid" column="cid" />
		<result property="tid" column="tid" />
		<result property="sid" column="sid" />
		<result property="email" column="email" />
		<result property="ticketId" column="ticket_id" />
		<result property="ticketName" column="ticket_name" />
		<result property="ticketPrice" column="ticket_price" />
		<result property="salesStatus" column="sales_status" />
		<result property="paymentDate" column="payment_date" />
		<result property="expiryDate" column="expiry_date" />
	</resultMap>


</mapper>
