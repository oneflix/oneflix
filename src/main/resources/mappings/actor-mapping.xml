<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ActorDAO">

	<insert id="insertActor" parameterType="actor">
		INSERT INTO
		actor (actor_id,actor_name,actor_age)
		VALUES
		(#{actorId},#{actorName},#{actorAge})
	</insert>
	<update id="updateActor" parameterType="actor">
		UPDATE Actor
		SET
		actor = #{actorPass}
		WHERE
		actor_id = #{actorId}
	</update>
	<delete id="deleteActor" parameterType="actor">
		DELETE FROM actor
		WHERE
		actor_id = #{actorId}
	</delete>
	<select id="getActor" parameterType="actor"
		resultType="actor">
		SELECT * FROM actor
		WHERE
		actor_id
		=
		#{actorId,
		jdbcType=NUMBER}
		AND
		actor_pass
		=
		#{actorPass,jdbcType=VARCHAR}
	</select>
	<resultMap type="actor" id="actorList">
		<id property="actorId" column="actor_id"/>
		<result property="actor" column="actor"/>
	</resultMap>
	<select id="getActorList" resultMap="actorList">
		SELECT*FROM actor ORDER BY actor_id ASC
	</select>

</mapper>
