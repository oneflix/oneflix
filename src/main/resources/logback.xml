<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
<property resource="logback.properties"/>
<property name="LOG_PACKAGE_NAME" value="${logging.config.packagename}" />
<property name="LOG_PATH" value="${logging.config.path}" />
<property name="LOG_FILE_NAME" value="${logging.config.filename}" />
<property name="LOG_DAYS" value="${logging.config.days}" />
<property name="LOG_FILESIZE_LOG" value="${logging.config.filesizelog}" />
<property name="LOG_FILESIZE_ZIP" value="${logging.config.filesizezip}" />
<property name="LOG_TOTAL_FILESIZE" value="${logging.config.totalfilesize}" />
<property name="LOG_FILE_MIN" value="${logging.config.min}" />
<property name="LOG_FILE_MAX" value="${logging.config.max}" />
<property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
   
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    	<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">	
            <pattern>${LOG_PATTERN}</pattern>
		</encoder>
    </appender> 
    
    <appender name="FILE"
      class="ch.qos.logback.core.rolling.RollingFileAppender">
	      <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
      <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
         <pattern>${LOG_PATTERN}</pattern>
      </encoder>
    
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd}.${LOG_FILE_NAME}.log</fileNamePattern>
         <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
       		  <maxFileSize>10KB</maxFileSize>
         </timeBasedFileNamingAndTriggeringPolicy>
         <maxHistory>${LOG_DAYS}</maxHistory>
         <totalSizeCap>1GB</totalSizeCap>
         <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
       		<pattern>${LOG_PATTERN}</pattern>
         </encoder>
      </rollingPolicy>
    </appender>
    
   <logger name="org.springframework" level="info"> 
    	 <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="kr.or.connect" level="debug">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
</configuration>